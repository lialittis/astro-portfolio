---
import { Icon } from 'astro-icon/components'
import Content from "./Content.astro";

interface Props {
  title?: string;
  body?: string;
  colSpan?: string;
  rowSpan?: string;
  href?: string;
  colorText?: string;
}

const { title, body, colSpan, rowSpan, href, colorText } = Astro.props;
---

<div
  class={`card group overflow-x-hidden overflow-y-auto transfor-y-[-40%] bg-darkslate-500 shadow-lg rounded-lg p-6 border border-darkslate-100 hover:border-primary-500 align-start flex-none justify-start relative transform perspective-1200 w-full transition duration-75 ease-in-out col-span-1 ${
    rowSpan?.includes('auto') ? 'h-auto min-h-fit' : 'h-auto'
  } ${
    colSpan || "md:col-span-2"
  } ${rowSpan || ""}`}
>
  {
    href ? (
      <a href={href} class={`h-full w-full ${colorText || " "}`}>
        <Icon
          name="ri:arrow-right-up-line"
          class="h-6 float-right group-hover:text-primary-500 group-hover:translate-x-1 group-hover:-translate-y-1 transition-transform ease-in-out duration-100 z-20"
        />
        <Content title={title} body={body}>
          <slot />
        </Content>
      </a>
    ) : (
      <Content title={title} body={body}>
        <slot />
      </Content>
    )
  }
</div>

<style>
  /* Hide scrollbar while keeping scroll functionality */
  .card {
    -ms-overflow-style: none; /* IE and Edge */
    scrollbar-width: none; /* Firefox */
    -webkit-overflow-scrolling: touch; /* iOS smooth scrolling */
  }

  /* Chrome, Safari, and Opera */
  .card::-webkit-scrollbar {
    display: none;
  }

