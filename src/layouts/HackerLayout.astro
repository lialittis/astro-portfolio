---
import NavBar from "../components/NavBar.astro";
import BasicLayout from "./BasicLayout.astro";

interface Props {
  title: string;
  description: string;
  page?: "travel";
}

const { title, description, page } = Astro.props;
---

<BasicLayout title={title} description={description}>
  <div
    slot="loader"
    class="loader bg-black text-green-500 text-3xl font-mono uppercase flex justify-center items-center w-screen h-screen z-50 fixed top-0 bottom-0 right-0 left-0"
  >
  </div>
  <NavBar />
  <slot />
</BasicLayout>
